<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %><br />
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email, class: "col-md-4 control-label" %><br />
    <div class="col-md-5">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-md-4 control-label" %>
    <% if @minimum_password_length %>
    <br><sup>(<%= @minimum_password_length %> characters minimum)</sup></br>
    <% end %><br />
    <div class="col-md-5">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-md-4 control-label" %><br />
    <div class="col-md-5">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit :Submit, class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
