<h1>Tasks <%= @task.id %> </h1>

<h2>Name: <%= @task.name %> </h2> 

<h3>Description: <%= @task.description %></h3>

<h4>Time: <%= @task.time %></h4>

<h5>Price: <%= @task.price %></h5>

<%= link_to "Edit This Task", edit_task_path(id: @task) %>
<%= link_to "Delete This Task", @post, method: :delete, data: {confirm: 'Are you sure you want to delete this task?'} %> 

