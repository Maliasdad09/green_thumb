<%= form_for :task do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name %> <br />

  <%= f.label :description %>
  <%= f.text_area :description %><br />

  <%= f.label :time %>
  <%= f.time_field :time %><br />

  <%= f.label :price %>
  <%= f.number_field :price, step: :any %><br />

  <%= f.submit %>
<% end %>  